{% if recomendation|length >=2 %}
    {% set size = 1 %}
{%  else %}
    {% set size = recomendation|length-1 %}
{% endif %}

{% if  recomendation|length != 0%}
{% for i in 0..size %}
<div class = "d-flex flex-row p-2 border user-card">

    <img class="rounded-pill" src="{{server}}{{cycle(recomendation[i]['photo'], i)}}" style="width: 50px; height: 50px;"/>

    <div class="d-flex flex-column pl-3">
        <span class="h5 text-dark font-weight-bold m-0">{{cycle(recomendation[i]['firstname'], i)}} {{cycle(recomendation[i]['lastname'], i)}}</span>
        <span class="h6 link">@{{cycle(recomendation[i]['username'], i)}}</span>
        <div class="row">
            <button id="button-user-{{ cycle(recomendation[i]['id'], i) }}" type="button"
                    class="btn user-card-body-btn-link text-light font-weight-bold rounded-pill col-md-6 col-lg-6 col-sm-6 col-6"
                    style="background-color: #0084B4;border: none" onclick="followUnfollow('{{ cycle(recomendation[i]['id'], i) }}',
                    'button-user-{{ cycle(recomendation[i]['id'], i) }}')">{{ cycle(recomendation[i]['isfollowing'], i) }}</button>
            <a href="../user/{{ cycle(recomendation[i]['id'], i) }}"
               class="btn user-card-body-btn-link text-light font-weight-bold rounded-pill  col-md-6 col-lg-6 col-sm-6 col-6"
               style="background-color:#e64e6c">Profile</a>
        </div>
    </div>
</div>
{% endfor %}
{% endif %}