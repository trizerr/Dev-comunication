{% if  who == 'me'%}
<div class="card tweet-panel">
    <div class="card-body d-flex flex-column justify-content-between pt-5">
        <form method="post" id="tweet-form" action="">
            <div class="tweet-input">
                <textarea class="tweet-form" name="body" style="height: 50px"
                          placeholder="What's happening?"></textarea>
            </div>
            <div class="text-right">
                <div id="character-counter"><span id="current">0</span><span id="maximum">/1000</span></div>
                <div class="row d-flex justify-content-end">
                        <input type="file" class="input-file" id="image_to_upload" name="image_to_upload" data-multiple-caption="{count} files selected" multiple/>
                        <label for="image_to_upload" class="p-2 mr-2"><i class="fas fa-file-upload"></i><span> Choose a file</span></label>
                    <button type="button" class="btn pl-3 pr-3" style="border: 2px solid #e64e6c" id='add-tweet'>POST</button>
                </div>
            </div>
        </form>
    </div>
</div>
{% endif %}

<div id="root"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="../js/tweets.js"></script>
<div id="tweets">
    {{ include('user/blocks/tweet.twig') }}
</div>
